#!/usr/bin/env python3

# Uncomment a selection
# Use as a pipe tag: |uc [symbol]

import sys
import os
import re


def get_symbol():
	"""Get the symbol to use for commenting out the text"""
	c = os.getenv("cflag")

	if c is None:
		return "//"
	else:
		return "".join(c.split(" ")[1:])


sym = get_symbol()

for line in sys.stdin:
	# Strip out the extra newline at the end
	line = line.rstrip()

	if sym == "#":
		matches = re.match("(^\s*)#(.*)", line)
	elif sym == "//":
		matches = re.match("(^\s*)//(.*)", line)


	if matches:
		before, after = matches.groups()
		print(f"{before}{after}")
	else:
		print(line)